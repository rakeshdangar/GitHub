@model LocalNews.Models.ResetPasswordModelStepTwo
@{
    ViewBag.Title = "Password reset step 2";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
</hgroup>

@using (Html.BeginForm("PasswordResetStepTwo", "Account"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <legend>Password reset step 2 form</legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.Username)
                @Html.TextBoxFor(m => m.Username, new { Value = ViewBag.username })
            </li>
            <li>
                @Html.LabelFor(m => m.Question)
                @Html.DisplayTextFor(m => m.Question)
            </li>
            <li>
                @Html.LabelFor(m => m.Answer)
                @Html.TextBoxFor(m => m.Answer)
            </li>
        </ol>
        <input type="submit" value="Submit" />
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
